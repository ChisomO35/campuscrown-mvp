rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function isSelf(uid) { return signedIn() && request.auth.uid == uid; }

    match /users/{uid} {
      allow read, update: if isSelf(uid) || true;
      allow create: if isSelf(uid);
      allow delete: if false;
    }

    match /stylistApplications/{applicationId} {
      allow create, read, update: if true;
      allow delete: if false;
    }

    match /stylists/{stylistId} {
      allow read: if true;
      allow create, update: if true;
      allow delete: if false;
    }

    match /availability/{stylistId} {
      allow read, write: if true;
    }

    match /bookings/{bookingId} {
      allow read, update: if signedIn() && (resource == null || request.auth.uid == resource.data.clientId || request.auth.uid == resource.data.stylistId);
      allow create: if signedIn();
      
      match /messages/{messageId} {
        allow read, create: if signedIn();
      }
    }

    match /conversations/{convId} {
      // Allow read for existence checks by any logged in user
      allow read: if signedIn();
      // Allow write (create/update) only if user is a participant
      allow create: if signedIn() && request.auth.uid in request.resource.data.participantIds;
      allow update: if signedIn() && request.auth.uid in resource.data.participantIds;

      match /messages/{messageId} {
        allow read, create: if signedIn();
      }
    }

    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if signedIn();
    }
  }
}
